{
    "version": "4.4.0.25886",
    "description": "Directory and file compare functions in one package",
    "homepage": "https://www.scootersoftware.com",
    "license": {
        "identifier": "Shareware",
        "url": "https://www.scootersoftware.com/index.php?zz=kb_licensev4"
    },
    "url": "https://www.scootersoftware.com/BCompare-de-4.4.0.25886.exe",
    "hash": "2c5e0716fe45b7140ca4f7c14bde453673f06efa646197fef940c22534750f0e",
    "innosetup": true,
    "architecture": {
        "64bit": {
            "installer": {
                "script": [
                    "Get-ChildItem \"$dir\" '*,1*' -Recurse | Remove-Item -Force",
                    "Get-ChildItem \"$dir\" '*,2*' -Recurse | ForEach-Object { Rename-Item $_.Fullname ($_.Name -Replace ',2') }"
                ]
            }
        },
        "32bit": {
            "installer": {
                "script": [
                    "Get-ChildItem \"$dir\" '*,2*' -Recurse | Remove-Item -Force",
                    "Get-ChildItem \"$dir\" '*,1*' -Recurse | ForEach-Object { Rename-Item $_.Fullname ($_.Name -Replace ',1') }"
                ]
            }
        }
    },
    "pre_install": [
        "New-Item \"$dir\\BCState.xml\" -ItemType file -ErrorAction SilentlyContinue | Out-Null",
        "New-Item \"$dir\\BCSessions.xml\" -ItemType file -ErrorAction SilentlyContinue | Out-Null",
        "New-Item \"$dir\\BCCommands.xml\" -ItemType file -ErrorAction SilentlyContinue | Out-Null",
        "New-Item \"$dir\\BCPreferences.xml\" -ItemType file -ErrorAction SilentlyContinue | Out-Null",
        "New-Item \"$dir\\BCColors.xml\" -ItemType file -ErrorAction SilentlyContinue | Out-Null",
        "New-Item \"$dir\\BCFileFormats.xml\" -ItemType file -ErrorAction SilentlyContinue | Out-Null",
        "New-Item \"$dir\\BCProfiles.xml\" -ItemType file -ErrorAction SilentlyContinue | Out-Null",
        "New-Item \"$dir\\BC4Key.txt\" -ItemType file -ErrorAction SilentlyContinue | Out-Null"
    ],
    "persist": [
        "Helpers",
        "BCState.xml",
        "BCSessions.xml",
        "BCCommands.xml",
        "BCPreferences.xml",
        "BCColors.xml",
        "BCFileFormats.xml",
        "BCProfiles.xml",
        "BC4Key.txt"
     ],
    "uninstaller": {
        "script": [
            "try {",
            "Get-ChildItem \"$dir\\*\" -Include 'BCState.xml', 'BCSessions.xml', 'BCCommands.xml', 'BCPreferences.xml', 'BCColors.xml', 'BCFileFormats.xml', 'BCProfiles.xml'| Copy-Item -Destination \"$persist_dir\" -ErrorVariable capturedErrors -ErrorAction SilentlyContinue",
            "} catch {}"
        ]
    },
    "bin": "Bcomp.exe",
    "shortcuts": [
        [
            "BCompare.exe",
            "Beyond Compare 4"
        ],
        [
            "BCClipboard.exe",
            "Clipboard Compare"
        ]
    ],
    "checkver": {
        "url": "https://www.scootersoftware.com/download.php",
        "regex": "BCompare-de-([\\d.]+)\\.exe"
    },
    "autoupdate": {
        "url": "https://www.scootersoftware.com/BCompare-de-$version.exe"
    }
}
