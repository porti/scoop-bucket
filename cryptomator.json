{
    "license":  "GPL-3.0-only",
    "homepage":  "https://cryptomator.org/",
	"description": "Cryptomator. Free client-side encryption for your cloud files",
    "hash": {
		"url": "$url.asc"
	},
	"checkver": {
		"github": "https://github.com/cryptomator/cryptomator/"
	},
	"autoupdate": {
		"url": "https://github.com/cryptomator/cryptomator/releases/download/$version/Cryptomator-$version-x64.exe"
	}
    "bin":  "cryptomator.exe",
    "shortcuts": [
        [
            "cryptomator.exe",
            "Cryptomator"
        ]
    ],	
	"persist": "data",
	"post_install": [
		"# change appdata settings folder",
		"(Get-Content \"$dir\\app\\Cryptomator.cfg\").replace('~/AppData/Roaming/Cryptomator', '../data').replace('\\', '/') | Set-Content \"$dir\\app\\Cryptomator.cfg\""
	],
	"innosetup": "true"
}
